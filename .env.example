# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY="YOUR API KEY HERE"
OPENAI_MODEL=gpt-3.5-turbo

# Slack Integration (Optional but recommended)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ENABLE=true

# Web Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_DELAY_MIN=1.0
SCRAPING_DELAY_MAX=3.0
SCRAPING_TIMEOUT=30
PAYWALL_DETECTION=true

# Content Processing
MIN_CRYPTO_RELEVANCE=0.4
MIN_WORD_COUNT=100
MAX_ARTICLES_TO_SCRAPE=10

# RSS Feeds (comma-separated)
RSS_FEEDS=https://cointelegraph.com/rss,https://decrypt.co/feed,https://www.coindesk.com/arc/outboundfeeds/rss/

# Session Settings
MAX_ARTICLES_PER_SESSION=5
MAX_ROUNDS=15
CONVERSATION_TIMEOUT=300

# Storage Settings
SAVE_CONVERSATIONS=true
SAVE_ARTICLES=true
SAVE_SCRAPED_CONTENT=true

# Logging
LOG_LEVEL=INFO

# Streamlit
STREAMLIT_PORT=8501
AUTO_REFRESH_INTERVAL=2